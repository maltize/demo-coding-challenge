<h1>Monsters</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Name', :sort => 'name' %></th>
      <th><%= link_to 'Power', :sort => 'power' %></th>
      <th>Type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.power %></td>
        <td><%= monster.typee %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div><%= link_to 'New Monster', new_monster_path %></div>
<div><%= link_to 'Teams section', teams_path %></div>
<div><%= link_to 'Home page', root_path %></div>
